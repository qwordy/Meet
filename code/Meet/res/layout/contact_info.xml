<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

         <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" > 
            
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="手机号"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:padding="10dp"
	            android:textSize="20sp" />
	        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center_vertical">
	
	            <TextView
	                android:id="@+id/contact_info_phone"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:onClick="contactInfoPhoneEdit"
	                android:textColor="#808080"
	                android:textSize="18sp"
            		android:padding="12dp" />
	            <Switch
	                android:id="@+id/contact_info_phone_overt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textOff="隐藏"
	                android:textOn="公开" />
	
	        </LinearLayout>
	        </LinearLayout>

        <View  
		   android:layout_width="fill_parent"  
		   android:layout_height="4dp" 
		   android:background="#F0F0F0" />
        
         <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" > 

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ号"
            android:textAppearance="?android:attr/textAppearanceMedium"
	        android:padding="10dp"
            android:textSize="20sp" />
        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/contact_info_qq"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="contactInfoQQEdit"
                android:textColor="#808080"
                android:textSize="18sp"
            	android:padding="12dp" />

            <Switch
                android:id="@+id/contact_info_qq_overt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="隐藏"
                android:textOn="公开" />

        </LinearLayout>
        </LinearLayout>

        <View  
		   android:layout_width="fill_parent"  
		   android:layout_height="4dp" 
		   android:background="#F0F0F0" />
        
         <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" > 
        
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceMedium"
	        android:padding="10dp"
            android:textSize="20sp" />
        
        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/contact_info_email"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="contactInfoEmailEdit"
                android:textColor="#808080"
                android:textSize="18sp" 
            	android:padding="12dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusableInTouchMode="true"
                android:focusable="true" />

            <Switch
                android:id="@+id/contact_info_email_overt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="隐藏"
                android:textOn="公开" />

        </LinearLayout>
        </LinearLayout>
		
        <View  
		   android:layout_width="fill_parent"  
		   android:layout_height="4dp" 
		   android:background="#F0F0F0" />
        
         <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" > 
        
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微博"
            android:textAppearance="?android:attr/textAppearanceMedium"
	        android:padding="10dp"
            android:textSize="20sp"
             />
        
        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/contact_info_weibo"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="contactInfoWeiboEdit"
                android:textColor="#808080"
                android:textSize="18sp" 
            	android:padding="12dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusableInTouchMode="true"
                android:focusable="true" />

            <Switch
                android:id="@+id/contact_info_weibo_overt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="隐藏"
                android:textOn="公开" />

        </LinearLayout>
        </LinearLayout>
        
       	<View  
		   android:layout_width="fill_parent"  
		   android:layout_height="4dp" 
		   android:background="#F0F0F0" />
        
         <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" > 
            
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人主页"
            android:textAppearance="?android:attr/textAppearanceMedium"
	        android:padding="10dp"
            android:textSize="20sp" />
        
        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/contact_info_socialnet"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:onClick="contactInfoSocialnetEdit"
                android:textColor="#808080"
                android:textSize="18sp" 
            	android:padding="12dp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusableInTouchMode="true"
                android:focusable="true" />

            <Switch
                android:id="@+id/contact_info_socialnet_overt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="隐藏"
                android:textOn="公开" />

        </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    

</ScrollView>

