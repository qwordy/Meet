<resources>
    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.MyTheme.ActionButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Theme.MyTheme.ActionButton.Active" parent="Theme.MyTheme.ActionButton">
        <item name="android:background">@color/background</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Theme.MyTheme.DeviceListItem">
        <item name="android:background">@drawable/roundcorner</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.MyTheme.InputItem">
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="style_chat_text">
        <item name="android:textSize">18sp</item>
        <item name="android:password">true</item>
    </style>
    <style name="style_target_text">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_date_text">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFCDCACA</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10sp</item>
    </style>
    <style name="style_username_text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="style_common_btn">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">6dp</item>

    </style>

</resources>
