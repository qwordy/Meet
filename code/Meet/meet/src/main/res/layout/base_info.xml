<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">
        <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/actionbar_background"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
		<LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" >  
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="昵称"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:padding="10dp"
	            android:textSize="20sp" />
	        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center_vertical">
	
	            <TextView
	                android:id="@+id/base_info_nick"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:clickable="true"
	                android:onClick="baseInfoNickEdit"
	                android:textColor="#808080"
	                android:textSize="18sp"
            		android:padding="12dp" />
	
	        </LinearLayout>
        </LinearLayout>

        <View  
		   android:layout_width="fill_parent"  
		   android:layout_height="4dp" 
		   android:background="#F0F0F0" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" >  
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="姓名"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="20sp"
	            android:padding="10dp" />
	        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />
	        
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center_vertical" >
	
	            <TextView
	                android:id="@+id/base_info_name"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:onClick="baseInfoNameEdit"
	                android:textColor="#808080"
	                android:textSize="18sp"
	            	android:padding="12dp" />
	
	            <Switch
	                android:id="@+id/base_info_name_overt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textOff="隐藏"
	                android:textOn="公开"
	                android:textColorLink="#B5E61D" />
	
	        </LinearLayout>
        </LinearLayout>

        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="4dp" 
			   android:background="#F0F0F0" />
        
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" >  
	        <TextView
	            android:id="@+id/textView3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="性别"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="20sp"
	            android:padding="10dp" />
	        
	        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center_horizontal|center_vertical"
	            android:orientation="horizontal" >
	
	            <TextView
	                android:id="@+id/base_info_gender"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:onClick="baseInfoGenderEdit"
	                android:textColor="#808080"
	                android:textSize="18sp"
	            	android:padding="12dp" />
	
	            <Switch
	                android:id="@+id/base_info_gender_overt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textOff="隐藏"
	                android:textOn="公开"
	                android:textColorLink="#B5E61D"  />
	
	        </LinearLayout>
        </LinearLayout>
		
        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="4dp" 
			   android:background="#F0F0F0" />
        
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" >  
        
	        <TextView
	            android:id="@+id/textView4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="生日"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="20sp"
	            android:padding="10dp" />
	        
	        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center_vertical" >
	
	            <TextView
	                android:id="@+id/base_info_birthday"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:onClick="baseInfoBirthdayEdit"
	                android:textColor="#808080"
	                android:textSize="18sp"
	                android:padding="12dp" />
	
	            <Switch
	                android:id="@+id/base_info_birthday_overt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textOff="隐藏"
	                android:textOn="公开" 
	                android:textColorLink="#B5E61D" />
	
	        </LinearLayout>
	    </LinearLayout>
        
        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="4dp" 
			   android:background="#F0F0F0" />
        
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" >  
        
	        <TextView
	            android:id="@+id/textView5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="籍贯"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="20sp"
	            android:padding="10dp" />
	        
	        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center_vertical" >
	
	            <TextView
	                android:id="@+id/base_info_homeland"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:onClick="baseInfoHomelandEdit"
	                android:textColor="#808080"
	                android:textSize="18sp"
	                android:padding="12dp" />
	
	            <Switch
	                android:id="@+id/base_info_homeland_overt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:checked="false"
	                android:textColorLink="#B5E61D"
	                android:textOff="隐藏"
	                android:textOn="公开" />
	
	        </LinearLayout>
        </LinearLayout>
        
        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="4dp" 
			   android:background="#F0F0F0" />
        
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" >  
            
	        <TextView
	            android:id="@+id/textView6"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="居住地"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="20sp" 
	            android:padding="10dp"/>
	        
	        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center_vertical" >
	
	            <TextView
	                android:id="@+id/base_info_location"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:onClick="baseInfoLocationEdit"
	                android:textColor="#808080"
	                android:textSize="18sp" 
	                android:padding="12dp"/>
	
	            <Switch
	                android:id="@+id/base_info_location_overt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textOff="隐藏"
	                android:textOn="公开"
	                android:textColorLink="#B5E61D"  />
	
	        </LinearLayout>
	   	</LinearLayout>
        
        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="4dp" 
			   android:background="#F0F0F0" />
        
        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       	 	android:orientation="vertical"
            android:background="#FFFFFF" >  
        
	        <TextView
	            android:id="@+id/textView7"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="标签"
	            android:textAppearance="?android:attr/textAppearanceMedium"
	            android:textSize="20sp"
	            android:padding="10dp" />
	        
	        <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="2dp" 
			   android:background="#F0F0F0" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="50dp"
	            android:gravity="center_vertical" >
	
	            <TextView
	                android:id="@+id/base_info_keywords"
	                android:layout_width="0dip"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:clickable="true"
	                android:onClick="baseInfoKeywordsEdit"
	                android:textColor="#808080"
	                android:textSize="18sp"
	                android:padding="12dp"
	                android:singleLine="true"
	                android:ellipsize="marquee"
	                android:marqueeRepeatLimit="marquee_forever"
	                android:focusableInTouchMode="true"
	                android:focusable="true" />
	
	            <Switch
	                android:id="@+id/base_info_keywords_overt"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textOff="隐藏"
	                android:textOn="公开" 
	                android:textColorLink="#B5E61D" />
	
	        </LinearLayout>
        </LinearLayout>
        
       <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="32dp" 
			   android:background="#F0F0F0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:background="#FFFFFF">
            
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="goToContactInfo"
                android:padding="14dp"
                android:text="联系方式"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />
            
            <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="4dp" 
			   android:background="#F0F0F0" />
            
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="goToEducationInfo"
                android:padding="14dp"
                android:text="教育背景"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />
            
            <View  
			   android:layout_width="fill_parent"  
			   android:layout_height="4dp" 
			   android:background="#F0F0F0" />
            
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="goToHobbyInfo"
                android:padding="14dp"
                android:text="兴趣爱好"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="20sp" />
            
        </LinearLayout>

    </LinearLayout>
    

</ScrollView>
